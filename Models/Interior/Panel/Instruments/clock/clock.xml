<?xml version="1.0"?>
<PropertyList> 
	<path>clock.ac</path>

	<animation> 
		<type>rotate</type>
		<object-name>HourHand</object-name>
		<property>/instrumentation/clock/indicated-sec</property>
		<factor>0.00833333333333333</factor>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation> 
		<type>rotate</type>
		<object-name>MinuteHand</object-name>
		<property>/instrumentation/clock/indicated-sec</property>
		<factor>0.1</factor>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation> 
		<type>rotate</type>
		<object-name>SecondHand</object-name>
		<property>/instrumentation/clock/indicated-sec</property>
		<factor>6</factor>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- lighting -->
	<animation> 
		<object-name>mount</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.45</red>
			<green>0.34</green>
			<blue>0.18</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.18</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>calculator-ring</object-name>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.18</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>HourHand</object-name>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.18</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>MinuteHand</object-name>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.18</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>SecondHand</object-name>
		<emission> 
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.18</blue>
		</emission>
	</animation>

	<animation>
		<object-name>clock</object-name>
		<type>noshadow</type>
	</animation>


	<!--  LoD  -->
	<animation> 
		<type>range</type>
		<min-m>0</min-m>
		<max-m>35</max-m>
	</animation>
</PropertyList>
