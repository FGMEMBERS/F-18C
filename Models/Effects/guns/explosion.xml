<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>fire</name>
    <type>normal</type>
    <texture>smoke.png</texture>

    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>

    <emissive> true      </emissive>
    <lighting> true      </lighting>
    <align>    billboard </align>  <!-- billboard / fixed -->
    <attach>   world     </attach> <!-- world / local-->

    <placer>
      <type> point </type> <!-- sector / segments / point -->
    </placer>

    <shooter>
      <theta-min-deg>84</theta-min-deg>
      <theta-max-deg>86</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
        <value>2</value>
        <spread>0</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>  5 </x-min-deg-sec>
        <y-min-deg-sec>  5 </y-min-deg-sec>
        <z-min-deg-sec>  5 </z-min-deg-sec>
        <x-max-deg-sec> 25 </x-max-deg-sec>
        <y-max-deg-sec> 25 </y-max-deg-sec>
        <z-max-deg-sec> 25 </z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>150</value>
        <spread>0</spread>
      </particles-per-sec>
    </counter>
      
    <particle>
      <start>
        <color>
          <red><value>   0.8 </value></red>
          <green><value> 0.8 </value></green>
          <blue><value>  0.1 </value></blue>
          <alpha><value> 0.3 </value></alpha>
        </color>
        <size>
          <value> 0.3 </value>
        </size>
      </start>
        
      <end>
        <color>
          <red><value>   0.8 </value></red>
          <green><value> 0.8 </value></green>
          <blue><value>  0.8 </value></blue>
          <alpha><value> 0.9 </value></alpha>
        </color>
        <size>
          <value> 20 </value>
        </size>
      </end>
        
      <life-sec>
        <value> 0.2 </value>
      </life-sec>
        
      <mass-kg>  0.001 </mass-kg>
      <radius-m> 1.000 </radius-m>
    </particle>
      
    <program>
      <fluid>   air   </fluid>
      <gravity> false </gravity>
      <wind>    true  </wind>
    </program>
      
  </particlesystem>

</PropertyList>

